{
    "manifest_version": 3,
    "name": "Sentiment Analysis Extension",
    "version": "1.0",
    "description": "Analyzes sentiment on web pages",
    "permissions": ["activeTab", "tabs"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["*://twitter.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  